@model UserUpdateViewModel
@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar Profil Bilgileri Düzenleme</h4>
            <br />
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>Yazar Ad Soyad</label>
                    <input type="text" asp-for="@Model.NameSurname" class="form-control" />
                    @*@Html.ValidationMessageFor(x => x.WriterName, null, new { @class = "text-danger" })*@
                </div>
                <div class="form-group">
                    <label>Kullanıcı Adı</label>
                    <input type="text" asp-for="@Model.UserName" class="form-control" />
                    @*@Html.ValidationMessageFor(x => x.WriterMail, null, new { @class = "text-danger" })*@
                </div>
                <div class="form-group">
                    <label>Mail Adresi</label>
                    <input type="text" asp-for="@Model.Email" class="form-control" />
                    @*@Html.ValidationMessageFor(x => x.WriterMail, null, new { @class = "text-danger" })*@
                </div>
                <div class="form-group">
                    <label>Yeni Şifre</label>
                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
                    @*@Html.ValidationMessageFor(x => x.WriterPassword, null, new { @class = "text-danger" })*@
                </div>
                <div class="form-group">
                    <label>Resim Yolu</label>
                    <input type="text" asp-for="@Model.ImageUrl" class="form-control" />
                    @*@Html.ValidationMessageFor(x => x.WriterMail, null, new { @class = "text-danger" })*@
                </div>
                @*<div class="form-group">
                        <label>Şifrenizi Tekrar Giriniz</label>
                        @Html.TextBoxFor(x => x.WriterPasswordAgain, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.WriterPasswordAgain, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Yazar Hakkında</label>
                        @Html.TextAreaFor(x => x.WriterAbout, 10, 3, new { @class = "form-control" })
                    </div>*@
