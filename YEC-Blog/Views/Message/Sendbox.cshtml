@using EntityLayer.Concrete
@model List<Message2>

@{
    ViewData["Title"] = "Sendbox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Giden Kutusu</h1>
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <table class="table table-hover">
                <tr>
                    <th>#</th>
                    <th>Konu</th>
                    <th>Alıcı</th>
                    <th>Tarih</th>
                    <th>Mesajı Aç</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@item.MessageID</th>
                        <td>@item.Subject</td>
                        <td>@item.ReceiverUser.WriterName</td>
                        <td>@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</td>
                        <td><a href="/Message/MessageDetails/@item.MessageID" class="btn btn-warning">Mesajı Aç</a></td>
                    </tr>
                }
            </table>
            <br />
            <a href="/Message/SendMessage/" class="btn btn-primary">Yeni Mesaj Oluştur</a>
        </div>
    </div>
</div>
