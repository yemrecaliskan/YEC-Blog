@using YEC_Blog.Models
@model RoleUpdateViewModel

@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Rol Düzenleme Sayfası</h5>
                </div>
                <div class="ibox-content">
                    <form method="post">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Rol ID</label>
                            <div class="col-sm-10"><input type="text" name="ID" value="@Model.ID" class="form-control"></div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Rol Başlık</label>
                            <div class="col-sm-10"><input type="text" name="Name" value="@Model.Name" class="form-control"></div>
                        </div>
                        <button type="submit" class="btn btn-sm btn-success">Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>