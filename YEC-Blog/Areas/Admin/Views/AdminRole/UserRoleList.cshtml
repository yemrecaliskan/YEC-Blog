 @using EntityLayer.Concrete
@model List<AppUser>
@{
    ViewData["Title"] = "UserRoleList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Kullanıcı Rol Listesi</h5>
                </div>
                <div class="ibox-content">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Kullanıcı</th>
                                <th>Rol Ata</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.UserName</td>
                                    <td><a href="/Admin/AdminRole/AssignRole/@item.Id" class="btn btn-primary">Atama Yap</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
            <a href="/Admin/AdminRole/" class="btn btn-primary">Rol Listesine Dön</a>
        </div>
    </div>
</div>