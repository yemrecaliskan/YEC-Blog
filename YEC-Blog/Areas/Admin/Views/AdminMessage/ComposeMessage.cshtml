
@{
    ViewData["Title"] = "ComposeMessage";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="mail-box-header">
                <div class="float-right tooltip-demo">
                    <a href="#" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Taslak"><i class="fa fa-pencil"></i> Taslak</a>
                    <a href="#" class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="top" title="İptal Et"><i class="fa fa-times"></i> İptal Et</a>
                </div>
                <h2>
                    Yeni Mesaj Oluştur
                </h2>
            </div>
            <div class="mail-box">


                <div class="mail-body">

                    <form method="get">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Alıcı:</label>

                            <div class="col-sm-10"><input type="text" class="form-control" value="yazar@yeclog.com"></div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Konu:</label>

                            <div class="col-sm-10"><input type="text" class="form-control" value=""></div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Mesajınız:</label>

                            <div class="col-sm-10"><textarea class="form-control"></textarea></div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="mail-body text-right tooltip-demo">
                <a href="mailbox.html" class="btn btn-sm btn-primary" data-toggle="tooltip" data-placement="top" title="Gönder"><i class="fa fa-reply"></i> Gönder</a>
                <a href="mailbox.html" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Vazgeç"><i class="fa fa-times"></i> Vazgeç</a>
                <a href="mailbox.html" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Taslak"><i class="fa fa-pencil"></i> Taslak</a>
            </div>
            <div class="clearfix"></div>



        </div>
    </div>
</div>