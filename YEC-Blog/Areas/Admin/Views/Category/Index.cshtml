@using EntityLayer.Concrete 
@model List<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-title">
                <h5>Kategori Listesi</h5>
            </div>
            <div class="ibox-content">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kategori Adı</th>
                            <th>Pasif Yap</th>
                            <th>Aktif Yap</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.CategoryID</th>
                                <td>@item.CategoryName</td>
                                <td><a href="#" class="btn btn-danger">Pasif Yap</a></td>
                                <td><a href="#" class="btn btn-success">Aktif Yap</a></td>
                                <td><a href="#" class="btn btn-warning">Düzenle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>