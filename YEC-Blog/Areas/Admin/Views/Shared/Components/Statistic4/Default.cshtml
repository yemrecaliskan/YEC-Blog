<div class="row">
    <div class="col-lg-12">
        <div class="widget-head-color-box navy-bg p-lg text-center">
            <div class="m-b-md">
                <h2 class="font-bold no-margins">
                    @ViewBag.AdminName
                </h2>
                <small>Core Blog Kurucusu</small>
            </div>
            <img src="@ViewBag.AdminImage" class="rounded-circle circle-border m-b-md" alt="profile">
            <div>
                <span>100 Tweetler</span> |
                <span>350 Takip Edilen</span> |
                <span>610 Takipçiler</span>
            </div>
        </div>
        <div class="widget-text-box">
            <h4 class="media-heading">@ViewBag.AdminName</h4>
            <p>@ViewBag.AdminDescription</p>
            <div class="text-right">
                <a href="" class="btn btn-xs btn-white"><i class="fa fa-thumbs-up"></i> Like </a>
                <a href="" class="btn btn-xs btn-primary"><i class="fa fa-heart"></i> Love</a>
            </div>
        </div>
    </div>
</div>